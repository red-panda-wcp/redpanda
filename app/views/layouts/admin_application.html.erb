
<!DOCTYPE html>
<html>
  <head>
    <title>Redpanda</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div id="slidemenu">
      <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
        <% if admin_signed_in? %>
          <li class="">
            <%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete %>
          </li>
          <li class="">
            <%= link_to '投稿フォーム', new_item_path %>
          </li>
        <% else %>
          <li class="">
            <%= link_to "管理者ログイン", new_admin_session_path %>
          </li>
        <% end %>
      </ul>
    </div>

    <%= yield %>

  </body>
</html>
