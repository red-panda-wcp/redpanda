
  <div class="form_base">

    <div class="form">
      <h1 class="form_name">会員登録</h1>
      <div class="form_msg"></div>
      <div class="form_body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="devise_errors">
          <%= devise_error_messages! %>
        </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"メールアドレス",class:"form_style form_input" %><br>

          <%= f.password_field :password, autocomplete: "off" ,placeholder: "パスワード（６文字以内）",class:"form_style form_input" %><br>
          <%= f.password_field :password_confirmation, autocomplete: "off",placeholder: "パスワード（確認用）",class:"form_style form_input" %><br>
<br>
        <div class="h-adr">
           <span class="p-country-name" style="display:none;">Japan</span>
          <%= f.number_field :postal_code, placeholder:"郵便番号",class:"form_style form_input p-postal-code",maxlength:"8",onKeyup:"this.value=this.value.replace(/[^0-9]+/,'')"%>
          <br>
          <%= f.text_field :address, placeholder:"住所",class:"form_style form_input p-region p-locality p-street-address p-extended-address" %>
          <br>
        </div>
    <!-- 住所自動設定ツール参考：https://github.com/yubinbango/yubinbango -->

        <%= f.text_field :kana_lastname, placeholder:"ミョウジ",class:"form_style_half form_input" %>
        <%= f.text_field :kana_firstname, placeholder:"ナマエ",class:"form_style_half form_input" %><br>

        <%= f.text_field :lastname, placeholder:"名字",class:"form_style_half form_input" %>
        <%= f.text_field :firstname, placeholder:"名前",class:"form_style_half form_input" %><br>
        <%= f.telephone_field :phone, placeholder:"電話番号",class:"form_style form_input",onKeyup:"this.value=this.value.replace(/[^0-9]+/,'')" %><br>

        <%= f.submit "登録",class:"btn" %>
      </div>
    </div>
    <% end %>
    <div class="devise_link">
     <%= render "devise/shared/links" %>
    </div>

  </div>